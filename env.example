# Agno Blog Application Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys (Required - at least one is needed)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
CO_API_KEY=your_cohere_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///agno_blog.db

# Security
OS_SECURITY_KEY=agno-blog-security-key

# Application Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Knowledge Base Configuration (Optional)
LANCE_DB_URI=tmp/lancedb
LANCE_DB_TABLE=blog_knowledge

# Templates Directory
TEMPLATES_DIR=templates

# Logging Configuration (Optional)
LOG_LEVEL=INFO

# Instructions:
# 1. Copy this file: cp env.example .env
# 2. Edit .env with your actual API keys
# 3. At least one of ANTHROPIC_API_KEY or OPENAI_API_KEY must be set
# 4. For development, you can set DEBUG=True
