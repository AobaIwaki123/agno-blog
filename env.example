# Agno Blog Application Environment Variables

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CO_API_KEY=your_cohere_api_key_here

# Security
OS_SECURITY_KEY=your_security_key_here

# Database Configuration
DATABASE_TYPE=sqlite  # sqlite or postgres
DATABASE_URL=postgresql+psycopg://user:pass@localhost:5432/agno_blog
SQLITE_DB_FILE=agno_blog.db

# Vector Database Configuration
VECTOR_DB_TYPE=lancedb  # lancedb or pgvector
LANCE_DB_URI=tmp/lancedb
LANCE_DB_TABLE=blog_knowledge

# Application Settings
DEBUG=False
HOST=0.0.0.0
PORT=8000

# HTTPX Settings
HTTPX_TIMEOUT_CONNECT=10.0
HTTPX_TIMEOUT_READ=30.0
HTTPX_TIMEOUT_WRITE=10.0
HTTPX_TIMEOUT_POOL=5.0
HTTPX_RETRIES=3

# Agent Settings
AGENT_HISTORY_RUNS=5
AGENT_MODEL_ID=claude-sonnet-4-0

# Logging
LOG_LEVEL=INFO
LOG_FILE=agno_blog.log
