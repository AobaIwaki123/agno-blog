# Agno Blog Application Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys (Required)
# =============================================================================

# OpenAI API Key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key for Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere API Key for embeddings (optional)
CO_API_KEY=your_cohere_api_key_here

# Google API Key
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL - SQLite for development, PostgreSQL for production
# SQLite (default for development):
# DATABASE_URL=sqlite:///agno_blog.db

# PostgreSQL (for production):
DATABASE_URL=postgresql+psycopg://agno:agno_password@localhost:5432/agno_blog

# =============================================================================
# Application Settings
# =============================================================================

# Debug mode (true for development, false for production)
DEBUG=true

# Host and port
HOST=0.0.0.0
PORT=8000

# Security key for AgentOS
OS_SECURITY_KEY=your_secure_random_key_here

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Redis Configuration (optional)
# =============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis_password

# =============================================================================
# Content Processing Settings
# =============================================================================

# Maximum content length for processing
MAX_CONTENT_LENGTH=50000

# Request timeout for web scraping (seconds)
REQUEST_TIMEOUT=30

# =============================================================================
# Vector Database Settings
# =============================================================================

# LanceDB directory
LANCEDB_URI=tmp/lancedb

# Vector database table name
VECTOR_TABLE_NAME=blog_knowledge

# =============================================================================
# Development Settings
# =============================================================================

# Reload on code changes (development only)
RELOAD=true

# Number of worker processes
WORKERS=1

# =============================================================================
# Production Settings
# =============================================================================

# Domain name for production deployment
DOMAIN=your-domain.com

# SSL/TLS settings
USE_SSL=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# =============================================================================
# Monitoring and Analytics (optional)
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=false

# Prometheus metrics endpoint
METRICS_PORT=9091

# =============================================================================
# Email Settings (optional, for notifications)
# =============================================================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com

# =============================================================================
# Cloud Storage (optional, for file uploads)
# =============================================================================

# AWS S3 settings
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=agno-blog-uploads

# =============================================================================
# External Services (optional)
# =============================================================================

# Webhook URLs for notifications
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Analytics tracking ID
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
